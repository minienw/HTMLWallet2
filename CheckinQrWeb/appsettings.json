{
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "Microsoft.AspNetCore": "Debug"
    },
    "Console": {
      "LogLevel": {
          "Default": "Debug",
          "Microsoft": "Warning",
          "Microsoft.Hosting.Lifetime": "Information"
      },
      "FormatterName": "Simple",
      "FormatterOptions": {
          "SingleLine": true,
          "IncludeScopes": false,
          "TimestampFormat": "HH:mm:ss ",
          "UseUtcTimestamp": true,
          "JsonWriterOptions": {
              "Indented": true
          }
      }
    }
  },
  "AllowedHosts": "*"
}
